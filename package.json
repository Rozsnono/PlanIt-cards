{
  "name": "planit-cards",
  "version": "0.9.6",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:api": "node ./.dist/server.js",
    "lint": "next lint",
    "build:start": "next build && next start",
    "build:api": "tsc -p ./api",
    "build:watch": "tsc --watch",
    "dev:api": "nodemon ./api/src/server.ts",
    "api-build:start": "tsc -p ./api && node ./.dist/server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build:all": "concurrently \"npm run build\" \"npm run build:api\"",
    "start:all": "concurrently \"npm run start\" \"npm run start:api\"",
    "build-start:all": "concurrently \"npm run build:start\" \"npm run api-build:start\"",
    "test:api": "jest --config api/jest.config.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.87.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/nodemailer": "^6.4.17",
    "@types/socket.io-client": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "http-proxy-middleware": "^2.0.6",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "mongoose": "^7.6.6",
    "morgan": "^1.10.0",
    "next": "^15.1.7",
    "nodemailer": "^7.0.3",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-query": "^3.39.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.47",
    "@types/react": "^18",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18",
    "@types/ws": "^8.5.12",
    "concurrently": "^9.1.2",
    "eslint": "^8",
    "eslint-config-next": "^15.1.7",
    "jest": "^29.7.0",
    "postcss": "^8",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5"
  }
}
